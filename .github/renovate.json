{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platform": "github",
  "repositories": [
    "ianhong/docker-renovate"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 3am"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "enabledManagers": [
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^public-images/[^/]+\\.versions$",
        "^[^/]+\\.versions$"
      ],
      "matchStrings": [
        "^(?<currentValue>.+)$"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{{replace '^(.*/)?([^/]+)\\.versions$' '$2' packageFile}}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "groupName": "Base Image Version Updates",
      "groupSlug": "base-images-regex",
      "minimumReleaseAge": "3 days"
    }
  ]
}