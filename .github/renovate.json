{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests"
  ],

  "timezone": "UTC",
  "schedule": ["before 3am"],
  
  "vulnerabilityAlerts": {
    "enabled": true,
    "osvVulnerabilityAlerts": true
  },

  "enabledManagers": ["custom.regex"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "public-images/**/*.versions"
      ],
      "matchStrings": [
        "(?<depName>[^:]+):(?<currentValue>[^@]+)(@(?<currentDigest>sha256:[a-f0-9]{64}))?"      ],
      "datasourceTemplate": "docker"
    }
  ],

  "packageRules": [
    {
      "description": "Disable minor and major updates, but ALLOW patch updates",
      "matchManagers": ["custom.regex"],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false,
      "groupName": "Base Image Version Updates",
      "groupSlug": "base-images-regex"
    }
  ]
}